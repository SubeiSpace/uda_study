/* component/news/news_item.wxss */
.news{
  height: 250rpx;
  padding: 20rpx;
}

.news .news_line{
  width: 100%;
  height: 1rpx;
  background: grey;
  bottom: 0;
  margin-top: 10rpx;
  
}

.news .news_detail{
  display: flex;
  justify-content: space-between;
}

.news_right_content{
  flex: 1;
  margin-right: 20rpx;
}

.news_right_content .news_right_title{
  font-size: 36rpx;
  line-height: 56rpx;
}

.news_right_content .news_right_desc{
  display: flex;
  margin-top: 10rpx;
  font-size:30rpx;
  line-height: 42rpx;
  color:gray;
}

.news_right_desc .news_right_date{
  margin-left: 20rpx;
}

.news_left_image{
  width: 245rpx;
  height: 245rpx;
}


